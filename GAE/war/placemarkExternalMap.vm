	margin-right: auto;
	margin-left: auto;
}
#leftContent {
	width: 325px;
	font-size: 10px;
	position: relative;
	float: left;
	top: 10px;
}
.QandA {
	position: relative;
	overflow: hidden;
	height: 35px;
}
.question  {
	background: #58585a;
	text-align: right;
	color: #f3f3f3;
	margin-top: 5px;
	margin-bottom: 5px;
	float: left;
	width: 155px;
	padding-right: 5px;
	padding-left: 5px;
	height: 35px;
}
.question span {
	position: relative;
	width: 100%;
}

.answer  {
	float: right;
	margin-top: 5px;
	margin-bottom: 5px;
	width: 150px;
	padding-left: 10px;
	height: 35px;
}
.answer img {
	top: 2px;
	position: relative;
}

#rightContent {
	position: relative;
	float: right;
	width: 195px;
	top: 10px;
}
#rightContent .photo {
	background: #58585a;
	padding: 10px;
}
#photoCaption {
	color: #f3f3f3;
	font-size: 10px;
	text-align: center;
	margin-top: 5px;
}

</style>
<div id="wrap">
    <div id="headerBalloon"><img src="http://watermapmonitordev.appspot.com/images/brandGreySmall.png">
