<section id="main" class="mapFlow floats-in" role="main">
  {{! <div id="drawHandleWrap"></div>}}
  <div id="dropdown-holder">
    {{#if FLOW.countryController.content}}
      <label for="country"><span class="inlined">Country:</span>
        {{view Ember.Select
        contentBinding="FLOW.countryController.content"
        valueBinding="FLOW.countryController.selected"
        optionLabelPath="content.label"
        selectionBinding="view.country"}}
      </label>
    {{/if}}
    <div id="mapDetailsHideShow" class="drawHandle hideMapD">{{t _hide}} &rsaquo;</div>
  </div>

  <div id="flowMap"></div>
  <div id="pointDetails">
    {{#if FLOW.placemarkDetailController.content}}
      <ul class="placeMarkBasicInfo floats-in">
        <li><span>Collected on:</span>
          {{#if FLOW.placemarkController.selected}}
            <div class="placeMarkCollectionDate"> 
              {{date2 FLOW.placemarkController.selected.collectionDate}}</div>
          {{/if}}
        </li>
        <li>
          {{#if FLOW.placemarkDetailController.selectedPointCode}}
            <div class="placeMarkPointCode"> 
              {{FLOW.placemarkDetailController.selectedPointCode}}
            </div>
          {{/if}}
        </li>
      </ul>

      {{#if view.detailsImage}}
        <div class="imgContainer">
          <a {{bindAttr href="view.detailsImage"}} target="_blank">
            <img {{bindAttr src="view.detailsImage"}} alt="" />
          </a>
        </div>
      {{/if}}
      
      <dl class="floats-in">
        {{#each FLOW.placemarkDetailController}}
          {{placemarkDetail}}
        {{else}}
          <p class="noDetails">{{t _no_details}}</p>    
        {{/each}}
      </dl>
    {{else}}
      <p class="noDetails">{{t _no_details}}</p>
    {{/if}}
  </div>

  <div id="flowMapLegend">
    <h1>LEGEND</h1>
  </div>
</section>

<style>
  #pointDetails > dl > div.defListWrap:nth-child(odd) {
    background-color: rgb(204,214,214);
  }
</style>