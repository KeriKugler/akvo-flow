{{#view FLOW.NotificationsView}}
<div class="manageNotificationsBlock">
    <section id="manageNotifications" class="mainContent mainRight">
        <div class="innerContent">
            <div id="notifications">
                <h1>
                    Notifications
                </h1>
                <div class="whiteBgSeparator">
                   
                    <form class="notificationAdd">
                        <fieldset>
                            <label for="emailNotification">Email  {{#if view.destinationEmpty}} - Please provide an email address {{/if}}</label> 
                            {{view Ember.TextField valueBinding="view.notificationDestination" id="emailNotification" size=150 }}
                        </fieldset>
                        <fieldset>
                            <label for="eventNotification">Event  {{#if view.typeEmpty}} - Please make a choice{{/if}}</label> 
                            {{view Ember.Select 
                            contentBinding="FLOW.notificationEventControl.content" 
                            optionLabelPath="content.label" 
                            optionValuePath="content.value" 
                            selectionBinding="view.notificationType" 
                            id="eventNotification" 
                            prompt="Select event"}}
                        </fieldset>
                        <fieldset>
                            <label for="typeNotification">Option  {{#if view.optionEmpty}} - Please make a choice {{/if}}</label> 
                            {{view Ember.Select 
                            contentBinding="FLOW.notificationOptionControl.content" 
                            optionLabelPath="content.label" 
                            optionValuePath="content.value" 
                            selectionBinding="view.notificationOption" 
                            id="typeNotification" 
                            prompt="Select option"}}
                        </fieldset>
                        <fieldset>
                            <label for="dateNotification">Expires {{#if view.dateEmpty}} - Please select a date {{/if}}</label> {{view FLOW.DateField2 valueBinding="view.expiryDate" id="dateNotification" size=30}}
                        </fieldset>
                        <fieldset class="addNotifiBtn">
                            <nav>
                                <ul>
                                    <li><a {{action "addNotification" target="this"}} class="smallBtn">Add</a></li>
                                    <li><a {{action "cancelNotification" target="this"}} >Cancel</a></li>
                                </ul>
                            </nav>
                        </fieldset>
                    </form>
                    <table class="notificationTable dataTable">
                        <!-- DEVICES TABLE--><!-- TABLE HEADER-->
                        <thead>
                            <tr>
                                <th>Email</th>
                                <th>Type</th>
                                <th>Option</th>
                                <th>Expires</th>
                                <th></th>
                            </tr>
                        </thead><!-- TABLE BODY: MAIN CONTENT-->
                        <tbody>
                          {{#each notification in FLOW.notificationControl}}
                            <tr>
                                <td class="">{{notification.notificationDestination}}</td>
                                <td class="">{{notification.notificationType}}</td>
                                <td class="">{{notification.notificationOption}}</td>
                                <td class="">{{#with notification}}{{date3 expiryDate}}{{/with}}</td>
                                <td class="action">
                                    <a {{action "removeNotification" notification target="this"}}>remove</a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody><!-- TABLE FOOTER-->
                        <tfoot>
                            <tr>
                                <td colspan="7">
                                    <small>This is the footer.</small>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
            <nav class>
                <ul>
                    <li>
                        <a {{action "closeNotifications" target="this"}} class="smallBtn">Close notifications</a>
                    </li>
                </ul>
            </nav>
        </div>
    </section>
</div>
{{/view}}