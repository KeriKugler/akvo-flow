<?xml version="1.0" encoding="utf-8"?>
<TableLayout android:id="@+id/QuestionLayout"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<TableRow android:layout_width="wrap_content">
		<TextView android:id="@+id/questionText"
			android:layout_width="300dip" />
	</TableRow>
	<TableRow android:layout_width="fill_parent">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent">
			<RadioGroup android:id="@+id/answerRadioGroup"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:orientation="vertical" android:visibility="gone" />
			<EditText android:id="@+id/answerEditText"
				android:layout_width="300dip" android:layout_height="wrap_content"
				android:orientation="vertical" android:visibility="gone" />
			<Button android:id="@+id/photoButton" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="@string/takephoto"
				android:visibility="gone" />
			<ImageView android:id="@+id/okIcon"
				android:src="@android:drawable/stat_sys_upload_done"
				android:visibility="gone" android:layout_width="20dip" android:layout_height="20dip"/>
		</LinearLayout>
	</TableRow>
</TableLayout>
	
