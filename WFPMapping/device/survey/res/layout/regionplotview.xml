<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/home_container" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<!--
		NOTE: the apiKey below is tied to the release keystore. If you use a different keystore, you'll need a new key.
	-->
	<com.google.android.maps.MapView
		android:id="@+id/mapview" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:apiKey="0-VFNHx65gE7XrBkuymcDhoWWiU1dgCx3mN9GkQ"
		android:enabled="true" android:clickable="true" />
	<LinearLayout
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:orientation="vertical" android:gravity="top"
		android:paddingLeft="5px" android:paddingTop="5px"
		android:paddingRight="5px">
		<com.gallatinsystems.survey.device.view.TransparentPanel
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:paddingLeft="5px" android:paddingTop="5px"
			android:paddingRight="5px" android:paddingBottom="5px">
			<Button android:id="@+id/plotaction_button"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="@string/addpoint" android:layout_weight="1" />
			<Button android:id="@+id/completeplot_button"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="@string/completeplot" />
		</com.gallatinsystems.survey.device.view.TransparentPanel>
	</LinearLayout>
</FrameLayout>
